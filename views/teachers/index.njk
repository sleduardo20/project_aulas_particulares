{% extends "layout.njk" %}

{% block content %}

    <div class="container card-list">
    <a href="/teachers/create">Novo</a>
        <table>
            <thead>
                <tr>
                <th>Teachers</th>
                <th>Atuação</th>
                <th>Ação</th>
                </tr>
            </thead>
            
            <tbody>
                {% for teacher in teachers %}    
                    <tr>
                        <td>
                        <span style= "background-image: url({{teacher.avatar_url}})"></span>
                        {{teacher.Name}}
                        </td>
                        <td>{{teacher.atuacao}}</td>
                        <td><a href="teachers/{{teacher.id}}">acessar</a></td>
                    </tr>
                {% endfor %}    
            </tbody>

        </table>
    </div>

{% endblock content %}


