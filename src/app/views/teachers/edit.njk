{% extends "layout.njk" %}

{% block content %}

<div class="container">

   <section class="images"
            style="background: url({{teacher.avatar_url}}) no-repeat center center / cover">
   </section>

   <section class="detalhes">
      
      <form  method="POST" action="/teachers?_method=PUT">
         <h3>Editar Dados</h3>
         
         {%include 'teachers/fields.njk' %}

         <input 
            type="hidden" 
            name="id" 
            value = {{teacher.id}}
         >
      </form>

      <form id="form-delete" action="/teachers?_method=DELETE" method="post">
            <input type="hidden" name="id" value={{teacher.id}}>
            <button class="btn-deletar" type="submit">Deletar</button>
      </form>
   </section>

</div>

{% include 'teachers/confirmation.njk' %}

{% endblock content %}
